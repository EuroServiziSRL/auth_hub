<div class="card-box">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% unless @errore.blank? %>
          <div class="alert alert-danger"><%= @errore %></div>
      <% end %>
      <%= form_for(resource, :as => resource_name, :url => [resource_name, :password_expired], :html => { :method => :put }) do |f| %>
        <!-- gestione errori di validazione  -->
        <% if resource.errors.any? %>
          <div id="error_explanation">
            <h4><%= resource.errors.count %> errori:</h4>
            <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="panel panel-default">
            <div class="panel-heading panel-heading-lg">Password Scaduta! Cambiare la Password!</div>
            
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-12">
                  <div class="row">
                    <div class="col-sm-12">
      								<div class="form-group form-group-sm" id="current_password">
      								  <label class="control-label" for="current_password">Vecchia password</label>
      								  <%= f.password_field :old_password, class: "form-control input-sm no-radius", autofocus: true, autocomplete: "off" %>
      								</div>
      							</div>
  					      
                    <div class="col-sm-12">
      								<div class="form-group form-group-sm" id="password">
      								  <label class="control-label" for="password">Nuova password</label>
      								  <%= f.password_field :password, class: "form-control input-sm no-radius", autofocus: true, autocomplete: "off" %>
      								</div>
      							</div>
                  
                    <div class="col-sm-12">
      								<div class="form-group form-group-sm" id="password_confirmation">
      								  <label class="control-label" for="password_confirmation">Conferma Nuova Password</label>
      								  <%= f.password_field :password_confirmation, class: "form-control input-sm no-radius", autofocus: true, autocomplete: "off" %>
      								</div>
      							</div>
                    
                  </div>
                </div>
              </div>
            </div>
            
        </div>
        
        <div class="text-center">
          <%= f.submit "Conferma", :class => 'btn btn-default btn-sm no-radius btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

