<div class="row">
    <div class="col-md-4 col-md-offset-4">
    <div class="row">
        <div class="col-sm-12">
            <% unless notice.blank?  %>
                <div class="alert alert-info"><%= notice %></div>
            <% end  %>
            <% unless alert.blank?  %>
                <div class="alert alert-warning"><%= alert %></div>
            <% end  %>
        </div>
    </div>
    
    <% if @autenticazione.include?("up") || @autenticazione.include?("all")  %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="panel panel-default">
    	    <div class="panel-heading panel-heading-lg">Log in</div>
    	    <div class="panel-body">
    	        <div class="row">
    	            <div class="col-lg-12">
    	                <input type='hidden' name='azione' value='login'>
    	                <div class="row">
                            
                		    <div class="col-sm-12">
                		        <div class="form-group form-group-sm">
                		            <%= f.label :email, class: "control-label" %><br />
                		            <%= f.email_field :email, autofocus: true, class: "form-control input-sm no-radius" %>
                		        </div>
                		    </div>
                            <div class="col-sm-12">
                                <div class="form-group form-group-sm">
                                  <%= f.label :password, class: "control-label" %><br />
                                  <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm no-radius" %>
                                </div>
                            </div>
                		    <% if devise_mapping.rememberable? -%>
                		        <div class="col-sm-12">
                		            <div class="form-group form-group-sm">
                			        <%= f.check_box :remember_me %>
                			        <%= f.label :remember_me %>
                		        </div>
                		        </div>
                		    <% end -%>
    	                </div>
    	            </div>
    	        </div>
    	    </div>
        </div>
    		    
        <div class="text-center">
          <%= f.submit "Log in", class: "btn btn-default btn-sm no-radius btn-primary" %>
        </div>
        
        <% end %>
    <% end %>  
    </div>
</div>

<%= render "users/shared/links" %>