<div class="card-box">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% unless @errore.blank? %>
          <div class="alert alert-danger"><%= @errore %></div>
      <% end %>
      <%= form_with(scope: :user, url: aggiorna_password_path, local: true, class: "form-horizontal") do |f| %>
        <div class="panel panel-default">
            <div class="panel-heading panel-heading-lg">Cambia Password</div>
            
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-12">
                  <div class="row">
                    <div class="col-sm-12">
      								<div class="form-group form-group-sm" id="old_password">
      								  <label class="control-label" for="old_password">Vecchia password</label>
      								  <%= f.password_field :old_password, class: "form-control input-sm no-radius", autofocus: true, autocomplete: "off" %>
      								</div>
      							</div>
  					      
                    <div class="col-sm-12">
      								<div class="form-group form-group-sm" id="password">
      								  <label class="control-label" for="password">Nuova password</label>
      								  <%= f.password_field :password, class: "form-control input-sm no-radius", autofocus: true, autocomplete: "off" %>
      								</div>
      							</div>
                  
                    <div class="col-sm-12">
      								<div class="form-group form-group-sm" id="password_confirmation">
      								  <label class="control-label" for="password_confirmation">Conferma Nuova Password</label>
      								  <%= f.password_field :password_confirmation, class: "form-control input-sm no-radius", autofocus: true, autocomplete: "off" %>
      								</div>
      							</div>
                    
                  </div>
                </div>
              </div>
            </div>
            
        </div>
        
        <div class="text-center">
          <%= f.submit "Conferma", :class => 'btn btn-default btn-sm no-radius btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>