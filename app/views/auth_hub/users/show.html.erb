<div class="card-box">
  <div class="row m-b-10">
    <div class="col-md-12">
    </div>
  </div>
  <div class="row">
      <% unless notice.blank? %><p id="notice"><div class="alert alert-info"><%= notice %></div></p><% end %>
  </div>
  <% if !@esito.blank? %>
	  <div class="row">
	      <div class="col-lg-offset-2 col-lg-8 alert alert-success"><%= @esito %></div>
	  </div>
  <% end %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render 'form', user: @user, azione: 'vedi' %>
	
    </div>
  </div>
  
</div>
