<% unless notice.blank? %><p id="notice"><div class="alert alert-info"><%= notice %></div></p><% end %>

<h1>Enti Gestiti</h1>

<table>
  <thead>
    <tr>
      <th>Destroy</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enti_gestiti.each do |ente_gestito| %>
      <tr>
        <td><%= ente_gestito.destroy %></td>
        <td><%= ente_gestito.show %></td>
        <td><%= link_to 'Show', ente_gestito %></td>
        <td><%= link_to 'Edit', edit_ente_gestito_path(ente_gestito) %></td>
        <td><%= link_to 'Destroy', ente_gestito, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

